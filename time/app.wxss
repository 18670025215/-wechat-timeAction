/*--滑动删除--------------------*/
.list-touch{
  overflow:hidden;
  width:100%; 
  display:block;
  background: #ffffff;
  border-bottom: 1px solid #dddddd;
}
.list-touch-checkBox{
  float:left; width:6%;  line-height: 40px; padding-left:2%; padding-right:2%;
}
.list-touch-content{
  float:left; width:90%;
}
.touch-item {
 font-size: 14px;
 display: flex;
 justify-content: space-between;
 width: 100%;
 overflow: hidden
}
.content {
 width: 100%;
 padding: 10px;
 line-height: 22px;
 margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(180px);
 transform: translateX(180px);
 margin-left: -180px;
}

.moreAction {
 
 width: 160px;
 /*display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;*/
 color: #fff;
 -webkit-transform: translateX(160px);
 transform: translateX(160px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 overflow: hidden;
}
.goTop{
  background-color: #1296db;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 44px;
  animation-iteration-count: center;
  width: 80px;
  float: left;
}
.del{
  background-color: orangered;
  display: flex;
  width: 80px;
  line-height: 44px;
  flex-direction: column;
  align-items: center;
  animation-iteration-count: center;
  float: left;
}
.touch-move-active .content,
.touch-move-active .moreAction {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}