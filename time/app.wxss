/*--滑动删除--------------------*/
.list-touch{
  overflow:hidden;
   width:100%; 
   display:block;
  background: #ffffff;
  border-bottom: 1px solid #dddddd;
}
.list-touch-checkBox{
  float:left; width:6%; padding:2%;
}
.list-touch-content{
  float:left; width:90%;
}
.touch-item {
 font-size: 14px;
 display: flex;
 justify-content: space-between;
 width: 100%;
 overflow: hidden
}
.content {
 width: 100%;
 padding: 10px;
 line-height: 22px;
 margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(190px);
 transform: translateX(190px);
 margin-left: -190px;
}
.list-top {
 background-color: #efefef;
 width: 90px;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: #fff;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
}
.del {
 background-color: orangered;
 width: 90px;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: #fff;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}